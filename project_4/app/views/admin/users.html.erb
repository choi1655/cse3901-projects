<h1>Admin#users</h1>

<h3>User Listing</h3>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Role</th>
      <th>Created At</th>
      <th>Reset Password</th>
      <th>Approve Admin</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td><%= user.created_at %></td>
        <td><%= button_to "Reset", action: "reset_password", data: {id: user.id } %></td>
        <% if user.role == 'instructor_pending' %>
        <td><%= button_to "Approve", action: "approve_instructor", data: {id: user.id } %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
