<%# display any alerts if errors with login. %>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<%# Format for login page.%>
<h1>Login</h1>
<%= form_tag sessions_path do |form| %>
  <div class="field">
    <%= label_tag :user %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
  <%= link_to 'Back', root_path %>
<% end %>
